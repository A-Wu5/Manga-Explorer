<%- include("./partials/header.ejs") %>
<% if (locals.mangaData) { %>
<h2 class="title fw-bold"> <%= mangaData.attributes["title"]["en"] %> </h2>
<p> Year: <%= mangaData.attributes["year"] %> </p>
<p> Latest Chapter: <%= mangaData.attributes["lastChapter"]%></p>
<p> Status: <%= mangaData.attributes["status"] %></p>
<p> <%= mangaData.attributes["description"]["en"]%></p>
<div class="py-3">
  <div class="btn bg-primary-subtle">Prev</div>
  <div class="btn bg-primary-subtle">Next</div>
</div>
<div>
<% chaptersData.forEach((chapter) => { %>
    <a href="/view/<%= mangaData.attributes["title"]["en"] %>/chapter/<%= chapter["attributes"].chapter %>/<%= chapter["id"] %>">
      <p> 
        Ch. <%= chapter["attributes"].chapter %> <%= chapter["attributes"].title %> 
      </p>
    </a>
<% }) %>
</div>
<% } else { %>
<%= errorMessage %>
<% } %>

<%- include("./partials/footer.ejs") %>